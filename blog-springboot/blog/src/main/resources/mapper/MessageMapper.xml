<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangzhe.blog.mapper.MessageMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.wangzhe.blog.entity.Message">
        <id column="id" property="id" />
        <result column="avatar" property="avatar" />
        <result column="nickname" property="nickname" />
        <result column="message_content" property="messageContent" />
        <result column="ip_address" property="ipAddress" />
        <result column="ip_source" property="ipSource" />
        <result column="time" property="time" />
        <result column="review_status" property="reviewStatus" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    <select id="selectMessagesForAdmin" resultType="com.wangzhe.blog.dto.MessageAdminDto">
        select * ,'test' as reviewStatusText from message
        <where>
            <if test="condition.reviewStatus != null">
                and review_status = #{condition.reviewStatus}
            </if>
            <if test="condition.nickname !=null">
                and nickname like concat('%',#{condition.nickname},'%')
            </if>
        </where>
    </select>
</mapper>
