<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangzhe.blog.mapper.MenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.wangzhe.blog.entity.Menu">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="path" property="path"/>
        <result column="component" property="component"/>
        <result column="icon" property="icon"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="order_num" property="orderNum"/>
        <result column="parent_id" property="parentId"/>
        <result column="is_hidden" property="isHidden"/>
    </resultMap>
    <resultMap id="SelectMenusResultMap" type="com.wangzhe.blog.dto.MenuDto">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="path" property="path"/>
        <result column="component" property="component"/>
        <result column="icon" property="icon"/>
        <result column="create_time" property="createTime"/>
        <result column="order_num" property="orderNum"/>
        <result column="is_hidden" property="isHidden"/>
        <collection property="children" javaType="List" ofType="com.wangzhe.blog.dto.MenuDto"
                    select="com.wangzhe.blog.mapper.MenuMapper.selectChildrenMenu" column="{parentId=id}">
        </collection>
    </resultMap>
    <select id="selectMenus" resultMap="SelectMenusResultMap">
        select *
        from menu
        where parent_id is null
        order by order_num;
    </select>

    <select id="selectChildrenMenu" resultMap="SelectMenusResultMap">
        select *
        from menu
        where parent_id = #{parentId}
        order by order_num;
    </select>
    <select id="selectMenusByCondition" resultType="com.wangzhe.blog.dto.MenuItemDto">

    </select>


</mapper>
