<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangzhe.blog.mapper.ResourceMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.wangzhe.blog.entity.Resource">
        <id column="id" property="id"/>
        <result column="resource_name" property="resourceName"/>
        <result column="uri" property="uri"/>
        <result column="request_method" property="requestMethod"/>
        <result column="parent_id" property="parentId"/>
        <result column="is_anonymous" property="isAnonymous"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="deleted" property="deleted"/>
    </resultMap>

    <resultMap id="selectAllResourcesMap" type="com.wangzhe.blog.dto.ResourceItemDto">
        <id column="id" property="id"/>
        <result column="resource_name" property="resourceName"/>
        <result column="uri" property="uri"/>
        <result column="request_method" property="requestMethod"/>
        <result column="parent_id" property="parentId"/>
        <result column="is_anonymous" property="isAnonymous"/>
        <result column="create_time" property="createTime"/>
        <collection property="children" ofType="com.wangzhe.blog.dto.ResourceItemDto"
                    select="com.wangzhe.blog.mapper.ResourceMapper.selectResourceChildren" column="{parentId=id}">
        </collection>
    </resultMap>

    <resultMap id="selectRoleResourceResultMap" type="com.wangzhe.blog.dto.RoleResourceDto">
        <id column="id" property="id"/>
        <result column="resource_name" property="label"/>
        <collection property="children" javaType="List" ofType="com.wangzhe.blog.dto.RoleResourceDto"
                    select="com.wangzhe.blog.mapper.ResourceMapper.selectRoleResourceChildren" column="{parentId=id}">
        </collection>
    </resultMap>
    <select id="selectResourceListByUserInfoId" resultType="com.wangzhe.blog.entity.Resource">
        SELECT re.*
        FROM user_role_relation urr
                 left join role r on urr.role_id = r.id
                 left join role_resource_relation rrr on r.id = rrr.role_id
                 left join resource re on rrr.resource_id = re.id
        where urr.user_info_id = #{userInfoId}
    </select>
    <select id="selectAllResources" resultMap="selectAllResourcesMap">
        select *
        from resource
        where parent_id is null and deleted = '0';
    </select>
    <select id="selectResourceChildren" resultMap="selectAllResourcesMap">
        select *
        from resource
        where parent_id = #{parentId} and deleted = '0';
    </select>
    <select id="selectRoleResource" resultMap="selectRoleResourceResultMap">
        select resource_name
        from resource
        where parent_id is null and deleted = '0';
    </select>
    <select id="selectRoleResourceChildren" resultMap="selectRoleResourceResultMap">
        select *
        from resource
        where parent_id = #{parentId} and deleted = '0';
    </select>

</mapper>
